                        option(value='小四') 小四
                        option(value='小五') 小五
                        option(value='小六') 小六
                td.ui-pg-button.ui-corner-all(width='120')
                  select#gridSubject
                    option(value='All', selected='selected') 所有學科
                    if school.level == '國中'
                        option(value='國文') 國文
                        option(value='數學') 數學
                        option(value='英語') 英語
                        option(value='自然') 自然
                        option(value='社會') 社會
